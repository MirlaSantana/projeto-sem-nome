<div class="container">
	<div class="col-md-6">	
		<%= form_for @project, url: @path_to_save, method: 'post', html: {id: 'form-ability'} do |f| %>
		  <div class="form-group">
		  	<%= f.label :name %>
		    <%= f.text_field :name, class: 'form-control' %>
		  </div>
		  
		  <div class="form-group">
		  	<%= f.label :start_date %>
			<%= f.text_field :start_date, class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :end_date %>
			<%= f.text_field :end_date, class: 'form-control' %>
		</div>

		<div>
			<%= f.label :size %>
			<%= f.text_field :size, class: 'form-control' %>
		</div>

		<div class="form-group">
			<br>
			<%= f.label :places %>
			<br>
			<%= f.collection_select :local_id, Local.all, :id, :country, prompt: true %>
			<br><br>
		</div>

		  <div>
		  	<%= f.submit 'Salvar', class: 'btn btn-success' %>
		  </div>
		<% end %>
	</div>
</div>

