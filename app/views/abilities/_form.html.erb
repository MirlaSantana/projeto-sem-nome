<div class="container">
	<div class="col-md-6">	
		<%= form_for @ability, url: @path_to_save, method: 'post', html: {id: 'form-ability'} do |f| %>
		  <div class="form-group">
		  	<%= f.label :name %>
		    <%= f.text_field :name, class: 'form-control' %>
		  </div>
		  
		  <div class="form-group">
		    <%= f.label :description %>
		    <%= f.text_area :description, class: 'form-control', rows: '5 ' %>
		  </div>

		  <div>
		  	<%= f.submit 'Salvar', class: 'btn btn-success' %>
		  </div>
		<% end %>
	</div>
</div>

