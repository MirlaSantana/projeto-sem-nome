<nav class="navbar navbar-inverse" role="navigation">
  <div class="navbar-header">
    <a class="navbar-brand" href="#">User_Stories</a>
  </div>

  <div class="collapse navbar-collapse navbar-ex1-collapse">
    <ul class="nav navbar-nav">
      <li><%= link_to 'Novo', new_user_stories_path(params[:theme_id]) %></li>
    </ul>
  </div>
</nav>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
    </tr>
  </thead>
  <tbody>
    <% @user_stories.each do |user_stories| %>
    <tr>
      <td><%= user_stories.name %></td>
      <td>
        <%= link_to edit_user_stories_path(user_stories.id), title: 'Editar' do  %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to show_user_stories_path(user_stories.id), title: 'Exibir' do  %>
          <span class="glyphicon glyphicon-eye-open"></span>
        <% end %>
        <%= link_to destroy_user_stories_path(user_stories.id), title: 'Excluir' do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
